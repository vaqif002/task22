@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int count = 1;
}
<div class="container-scroller">
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
         
                <td>
                    <a class="btn btn-success" asp-area="Admin" asp-controller="Teams" asp-action="Create">Create</a>
                    </td>
           
            <p class="card-description">

            
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                              Fullname
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Image
                            </th> 
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Team item in Model)
                            {
                                <tr>
                                    <td>
                                    @count
                                    </td>
                                    <td>
                                     @item.Name
                                    </td>
                                    <td>
                                @item.Description
                                    </td>
                                    <td>
                                        <img src="~/assets/img/team/@item.ImagePath" alt="image">
                                    </td>
                                    <td>
                                        <button type="submit" class="btn btn-warning" asp-area="Admin" asp-controller="Teams" asp-action="Update">Update</button>
                                        <a><button type="submit" class="btn btn-danger" asp-area="Admin" asp-controller="Teams" asp-action="Delete">Delete</button></a>

                                    </td>
                                </tr>
                                count++;
                            }
                      
                           
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
